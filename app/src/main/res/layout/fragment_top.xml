<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.kelc.plbtw_n.plbtw_n.Main.TopNews.TopFragment">

    <!-- TODO: Update blank fragment layout -->
    <me.wangyuwei.loadingview.LoadingView
        android:id="@+id/loading_view"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="gone"
        app:lv_duration="3"
        app:lv_start_color="#2980b9"
        app:lv_end_color="#3498db"
        app:lv_internal_radius="5dp"
        app:lv_external_radius="30dp" />

    <ListView
        android:id="@+id/mainListTopNews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ecf0f1"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:scrollbars="none"
        tools:context=".listview.MainActivity" />

</FrameLayout>
